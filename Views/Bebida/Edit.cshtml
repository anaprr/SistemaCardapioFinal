@model SistemaCardapioFinal.Models.Bebida

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DescricaoBebida" class="control-label"></label>
                <input asp-for="DescricaoBebida" class="form-control" />
                <span asp-validation-for="DescricaoBebida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Savar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
