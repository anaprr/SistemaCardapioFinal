@model IEnumerable<SistemaCardapioFinal.Models.Cardapio>

@{
    ViewData["Title"] = "Index";
}

<h1>Cardapio</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardapioNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Base.DescricaoBase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acompanhamento.DescricaoAcompanhamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salada.DescricaoSalada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bebida.DescricaoBebida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobremesa.DescricaoSobremesa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardapioNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Base.DescricaoBase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acompanhamento.DescricaoAcompanhamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salada.DescricaoSalada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bebida.DescricaoBebida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobremesa.DescricaoSobremesa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CardapioId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CardapioId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CardapioId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
